@model Marketplace.Models.ViewModels.AdsVM

@if(Model.Ads.Count() == 0)
{
    <h3 class="text-center text-muted">No results</h3>
}
else
{
<div id="ads" class="d-flex flex-wrap justify-content-between ads-container">
    @foreach (Ad ad in Model.Ads)
    {
        <div class="ad-card d-flex flex-column bg-light">
            <div class="d-flex justify-content-center overflow-hidden bg-white">
                <img class="ad-card__img" src="@ad.GetImgSrc()" alt="@ad.Title" />
            </div>

            <div class="ad-card__info w-100">
                <h5 class="ad-card__title"><a href="/Home/Ad/@ad.GetAdURLQuery()">@ad.Title</a></h5>
                <p class="ad-card__description">@ad.Description</p>
                <p class="ad-card__price">@ad.Price</p>
            </div>

        </div>
    }
</div>

<div class="d-flex align-items-center justify-content-center pagination-menu">
    <button class="btn btn-dark btn-pagination" id="previousPageBtn">
        Previous
    </button>

    <p class="mb-0 ml-3 mr-3">
        <span id="currentPage">@Model.PageNumber</span>
        /
        <span id="pagesAmount">@Model.PageAmount</span>
    </p>

    <button class="btn btn-dark btn-pagination" id="nextPageBtn">
        Next
    </button>
</div>

}